<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="admin_activity_log" resource="default" engine="innodb" comment="Admin Activity Log">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="int" name="admin_user_id" unsigned="true" nullable="false" comment="Admin User ID"/>
        <column xsi:type="varchar" name="username" nullable="false" length="255" comment="Username"/>
        <column xsi:type="varchar" name="action" nullable="false" length="50" comment="Action"/>
        <column xsi:type="varchar" name="entity_type" nullable="true" length="255" comment="Entity Type"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="true" comment="Entity ID"/>
        <column xsi:type="int" name="store_id" unsigned="true" nullable="true" comment="Store ID"/>
        <column xsi:type="int" name="website_id" unsigned="true" nullable="true" comment="Website ID"/>
        <column xsi:type="text" name="changes" nullable="true" comment="Changes"/>
        <column xsi:type="varchar" name="ip_address" nullable="true" length="45" comment="IP Address"/>
        <column xsi:type="text" name="user_agent" nullable="true" comment="User Agent"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="ADMIN_ACTIVITY_LOG_ADMIN_USER_ID" indexType="btree">
            <column name="admin_user_id"/>
        </index>
        <index referenceId="ADMIN_ACTIVITY_LOG_ACTION" indexType="btree">
            <column name="action"/>
        </index>
        <index referenceId="ADMIN_ACTIVITY_LOG_ENTITY_TYPE" indexType="btree">
            <column name="entity_type"/>
        </index>
        <index referenceId="ADMIN_ACTIVITY_LOG_CREATED_AT" indexType="btree">
            <column name="created_at"/>
        </index>
        <index referenceId="ADMIN_ACTIVITY_LOG_STORE_ID" indexType="btree">
            <column name="store_id"/>
        </index>
    </table>
    
    <table name="admin_activity_entity_snapshot" resource="default" engine="innodb" comment="Admin Activity Entity Snapshot">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="varchar" name="entity_type" nullable="false" length="255" comment="Entity Type"/>
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" comment="Entity ID"/>
        <column xsi:type="longtext" name="data_snapshot" nullable="false" comment="Data Snapshot"/>
        <column xsi:type="varchar" name="data_type" nullable="false" length="50" default="model" comment="Data Type"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="ADMIN_ACTIVITY_ENTITY_SNAPSHOT_ENTITY_TYPE_ENTITY_ID_DATA_TYPE">
            <column name="entity_type"/>
            <column name="entity_id"/>
            <column name="data_type"/>
        </constraint>
        <index referenceId="ADMIN_ACTIVITY_ENTITY_SNAPSHOT_ENTITY_TYPE" indexType="btree">
            <column name="entity_type"/>
        </index>
        <index referenceId="ADMIN_ACTIVITY_ENTITY_SNAPSHOT_ENTITY_ID" indexType="btree">
            <column name="entity_id"/>
        </index>
    </table>
</schema>